<!DOCTYPE html>
<html lang="en">
<head>
    <title>Homepage</title>
    <%- include("./partials/head.ejs") %>
</head>
<body>
    <%- include("./partials/nav.ejs") %>
    <% if (locals.blogs) { %>
        <div class="container mt-2">
            <div class="row row-cols-3">
                <% blogs.forEach(blog => { %>
            
                    <div class="col w-1" >
                        <div class="card col mt-1" style="width: 300px; height: 260px;">
                            <img src="<%= blog.coverImageUrl %>" class="card-img-top" alt="..." style="width: 286px; height: 150px;">
                            <div class="card-body">
                              <h5 class="card-title"> <%= blog.title.slice(0,50) %>  </h5>
                              <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
                            </div>
                        </div>
                    </div>
                 
                <% }) %>
            </div>
        </div>
    <% } %>
    <%- include("./partials/script.ejs") %>
</body>
</html>